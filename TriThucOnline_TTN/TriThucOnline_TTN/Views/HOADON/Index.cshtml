@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}

@Html.ActionLink("Tạo Hóa Đơn", "Create", "HOADON")
<hr />
<table class="table table-bordered table-striped">
    <tr>
        @*<th>Mã Nhà Xuất Bản</th>*@
        <th>Mã Hóa Đơn</th>
        <th>Mã Đầu sách</th>
        <th>Ngày mua hàng</th>
        <th>ID người mua hàng</th>

        <th>Chức năng</th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][0]</td>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>

            <td>
                <a href="@Url.Action("Edit","HOADON", new { @id=@Model.Rows[i][0]})">Chỉnh sửa </a>
                <a href="@Url.Action("Delete","HOADON", new { @id=@Model.Rows[i][0]})">Xóa </a>
                @*@Html.ActionLink("Chỉnh sửa","Edit","NXB", new { @id = @Model.Rows[i][0]})*@
            </td>
        </tr>
    }
</table>
