@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}

@Html.ActionLink("Thêm Khách hàng mới", "Create", "USER")
<hr />
<table class="table table-bordered table-striped">
    <tr>
        @*<th>Mã Nhà Xuất Bản</th>*@
        <th>Tên khách hàng</th>
        <th>Địa chỉ</th>
        <th>Phone Number</th>
        <th>Email</th>
        <th>Password</th>
        <th>Ảnh Người dùng</th>
        <th></th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            @*<td>@Model.Rows[i][0]</td>*@
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>@Model.Rows[i][4]</td>
            <td>@Model.Rows[i][5]</td>
            <td> <img src="@Model.Rows[i][6]" alt="Alternate Text" /> </td>
            <td>
                <a href="@Url.Action("Edit","USER", new { @id=@Model.Rows[i][0]})">Chỉnh sửa </a>
                <a href="@Url.Action("delete","USER", new { @id=@Model.Rows[i][0]})">Xóa </a>
                @*@Html.ActionLink("Chỉnh sửa","Edit","NXB", new { @id = @Model.Rows[i][0]})*@
            </td>
        </tr>
    }
</table>

