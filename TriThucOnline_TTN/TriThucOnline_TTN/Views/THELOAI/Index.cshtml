@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}

@Html.ActionLink("Thêm THỂ LOẠI", "Create", "THELOAI")
<hr />

<table class="table table-bordered table-striped">
    <tr>
        @*<th>Mã Nhà Xuất Bản</th>*@
        <th>Tên Thể Loại</th>
        <th></th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            @*<td>@Model.Rows[i][0]</td>*@
            <td>@Model.Rows[i][1]</td>
            <td>
                <a href="@Url.Action("Edit","THELOAI", new { @id=@Model.Rows[i][0]})">Chỉnh sửa </a>
                <a href="@Url.Action("delete","THELOAI", new { @id=@Model.Rows[i][0]})">Xóa </a>
                @*@Html.ActionLink("Chỉnh sửa","Edit","NXB", new { @id = @Model.Rows[i][0]})*@
            </td>
        </tr>
    }
</table>
